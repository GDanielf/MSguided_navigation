<?xml version="1.0"?>
<robot name="camera_robot">
  <link name="world"/>
  <link name="base_link_0">    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="world_to_base_0" type="fixed">
    <parent link="world"/>
    <child link="base_link_0"/>
    <origin xyz="-3 -7.4687 0" rpy="0 0 1.57"/>
  </joint>  

  <link name="neck_link_0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="head_yaw_joint_0" type="continuous">
    <parent link="base_link_0"/>
    <child link="neck_link_0"/>
    <origin xyz="0 0 3.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>  

  <link name="head_link_0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>  

  <joint name="camera_tilt_joint_0" type="continuous">
    <parent link="neck_link_0"/>  
    <child link="head_link_0"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>  
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="imu_0">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="head_to_imu_0" type="fixed">
    <origin xyz="0.0 0.0 0.0"/>
    <parent link="head_link_0"/>
    <child link="imu_0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
  
  <gazebo reference="head_link_0">
    <gravity>0</gravity>
  </gazebo>
  <gazebo reference="neck_link_0">
    <gravity>0</gravity>
  </gazebo>

  <gazebo reference="imu_0">
    <sensor name="camera_imu_sensor_0" type="imu">
      <always_on>1</always_on>
      <update_rate>10.0</update_rate>
      <visualize>true</visualize>
      <topic>imu_0</topic>
    </sensor>
  </gazebo>

  <gazebo reference="neck_link_0">
    <visual>
      <material>
        <ambient>0 0.8 0 0</ambient>
        <diffuse>0 0.8 0 0</diffuse>
        <specular>0 0.8 0 0</specular>
      </material>
    </visual>
  </gazebo>

