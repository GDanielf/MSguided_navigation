<?xml version="1.0"?>
<robot name="camera_robot">
  <link name="world"/>
  <link name="base_link">    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>  

  <link name="neck_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="head_yaw_joint" type="continuous">
    <parent link="base_link"/>
    <child link="neck_link"/>
    <origin xyz="0 0 3.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>  

  <link name="head_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>  

  <joint name="camera_tilt_joint" type="continuous">
    <parent link="neck_link"/>  
    <child link="head_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>  
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="imu">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="head_to_imu" type="fixed">
    <origin xyz="0.0 0.0 0.0"/>
    <parent link="head_link"/>
    <child link="imu"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
  
  <gazebo reference="head_link">
    <gravity>0</gravity>
  </gazebo>
  <gazebo reference="neck_link">
    <gravity>0</gravity>
  </gazebo>

  <gazebo reference="imu">
    <sensor name="camera_imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>10.0</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
    </sensor>
  </gazebo>

  <gazebo reference="neck_link">
    <visual>
      <material>
        <ambient>0 0.8 0 0</ambient>
        <diffuse>0 0.8 0 0</diffuse>
        <specular>0 0.8 0 0</specular>
      </material>
    </visual>
  </gazebo>

  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>
    <joint name="head_yaw_joint">
      <command_interface name="velocity"> 
        <param name="initial_value">0.0</param> 
        <param name="min">-15</param> 
        <param name="max">15</param>   
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
     <joint name="camera_tilt_joint">
      <command_interface name="velocity">  
        <param name="initial_value">0.0</param>
        <param name="min">-15</param> 
        <param name="max">15</param> 
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <sensor name="camera_imu_sensor">
      <state_interface name="orientation.x"/>
      <state_interface name="orientation.y"/>
      <state_interface name="orientation.z"/>
      <state_interface name="orientation.w"/>
      <state_interface name="angular_velocity.x"/>
      <state_interface name="angular_velocity.y"/>
      <state_interface name="angular_velocity.z"/>
      <state_interface name="linear_acceleration.x"/>
      <state_interface name="linear_acceleration.y"/>
      <state_interface name="linear_acceleration.z"/>
    </sensor>
  </ros2_control>

  <transmission name="head_yaw_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="head_yaw_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="camera_tilt_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="camera_tilt_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
  </transmission>

  <gazebo reference="head_link">
    <sensor type="camera" name="camera_sensor">
      <update_rate>30.0</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>1920</width>
          <height>1080</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <always_on>true</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>$(find guided_navigation)/config/camera_config.yaml</parameters>
    </plugin>
    <plugin
      filename="ignition-gazebo-imu-system"
      name="ignition::gazebo::systems::Imu">
    </plugin>
  </gazebo>

</robot>
